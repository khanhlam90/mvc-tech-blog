{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
        {{#each posts as |post|}}
            {{!-- refer to partial dashboard-postinfo --}}
            {{> dashboard-post-info post}}
        {{/each}}
</section>
{{/if}}
{{!-- button for create new post --}}
<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="/javascript/add-post.js"></script>